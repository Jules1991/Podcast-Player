<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_dialog_view_list"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:clipToPadding="false"
    android:background="@drawable/dialog_view_list_selector"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/dialog_view_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:clipToPadding="false"
        android:layout_marginLeft="16dp"
        android:paddingBottom="12dp"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:src="@drawable/ic_delete_white_18dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"

        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/dialog_view_percent"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:background="@drawable/circle_background"
            android:elevation="6dp"
            android:gravity="center"
            android:text="77%"
            android:textColor="@color/dim_white_text"
            android:textSize="15sp" />

        <!--
        <ImageView todo change name here!!!!!!!!!!!!!!!!!
            android:id="@+id/navListImageViewIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_headset_white_24dp" />
            -->

        <TextView
            android:id="@+id/dialogViewTextFormatted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/dialog_view_percent"
            android:baselineAligned="false"
            android:singleLine="true"
            android:text="(4:83)"
            android:textColor="@color/white_light"
            android:textSize="14sp">

        </TextView>

    </RelativeLayout>


</RelativeLayout>
